<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Record Display</title>
    <style>
        .record {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            cursor: pointer;
        }
        .record:hover {
            background-color: #f0f0f0;
        }
        .record-data {
            display: none;
        }
    </style>
</head>
<body>
    <% ddocuments.forEach(doc => { %>
        <div class="record" id="<%= doc.id %>" onclick="toggleData('<%= doc.id %>')">
            Record ID: <%= doc.id %>
            <div class="record-data" id="<%= doc.id + '-data' %>">
                <pre><%= JSON.stringify(doc.data, null, 2) %></pre>
            </div>
        </div>
    <% }); %>

    <script>
        function toggleData(id) {
            const dataDiv = document.getElementById(id + '-data');
            if (dataDiv) {
                if (dataDiv.style.display === 'none') {
                    dataDiv.style.display = 'block';
                } else {
                    dataDiv.style.display = 'none';
                }
            }
        }
    </script>
